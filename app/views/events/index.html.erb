<p id="notice"><%= notice %></p>

<div class="float-left">
  <h4>Eventos</h4>
</div>

<div class="float-right">
  <%= link_to 'Novo Evento', new_user_event_path, class: 'btn btn-sm btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome do Evento</th>
